<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%=campground.image%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=campground.title%></h5>
              <p class="card-text"><%=campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">&#x1F4CD; <%=campground.location%></li>
              <li class="list-group-item">$ <%=campground.price%> / day</li>
            </ul>
            <div class="card-body row text-center px-2">
                <div class="col-4">
                    <button onclick="location.href='/campgrounds/<%=campground._id%>/edit/'" class="btn btn-primary w-100">Edit</button>
                </div>
                <div class="col-4">
                    <button onclick="location.href='/campgrounds'" class="btn btn-secondary w-100">All campgrounds</button>
                </div>
                <div class="col-4">
                    <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger w-100">Delete</button>
                    </form>
                </div>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
        <h2> Leave a Review</h2>
        <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" novalidate class="mb-3 needs-validation">
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review Text</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <% for(let review of campground.reviews) { %>
        <div class="mb-3">
            <p>Review: <%=review.rating%></p>
            <p>Review: <%=review.body%></p>
        </div>
        <%}%>                
    </div>
</div>
